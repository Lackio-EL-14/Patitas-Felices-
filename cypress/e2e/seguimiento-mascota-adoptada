

describe('Seguimiento de mascota adoptada', () => {
  it('DeberÃ­a permitir subir una foto y mostrarla en el panel', () => {
    cy.visit('/seguimiento-mascota.html');
    const fileName = 'fido.jpg';
    cy.get('[data-cy="input-foto"]').attachFile(fileName);
    cy.get('[data-cy="btn-subir"]').click();
    cy.get('[data-cy="galeria-fotos"]').contains(fileName).should('be.visible');
  });
});
